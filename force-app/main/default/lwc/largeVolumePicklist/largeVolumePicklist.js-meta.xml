<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>54.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Large Volume Picklist</masterLabel>
    <description>Configurable picklist for large choice sets that do not fit in a regular picklist</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
       <targetConfig targets="lightning__FlowScreen">
            <property name="label" label="Label" type="String" role="inputOnly"/>
            <property name="placeholder" label="Placeholder Text" type="String" role="inputOnly"/>
            <property name="choicesFile" label="Choices Static Resource Name" type="String" role="inputOnly"/>
            <property name="value" label="Value" type="String" role="outputOnly" />
       </targetConfig>
    </targetConfigs>
</LightningComponentBundle>